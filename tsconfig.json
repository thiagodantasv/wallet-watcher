{
    "compilerOptions": {
      "removeComments": true,
      "preserveConstEnums": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "experimentalDecorators":true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "types": [ "node" ],
      "target": "esnext",
      "suppressImplicitAnyIndexErrors": true,
      "allowJs": true,
      "jsx": "react",
      "alwaysStrict": true,
      "skipLibCheck": true
    },
    "exclude": [
      "**/*.js",
      "**/node_modules",
      "src/web/public/*",
      "src/web/build/*",
      "src/web/node_modules/*",
      "**.d.ts",
      "src/web/config/**/*.js"
    ]
}